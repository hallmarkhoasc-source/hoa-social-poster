name: Keep Alive

on:
  schedule:
    # Run every 50 days (at midnight UTC)
    - cron: '0 0 */50 * *'
  # Allow manual triggering from GitHub UI
  workflow_dispatch:

jobs:
  keep-alive:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
      
      - name: Update keep-alive timestamp
        run: |
          mkdir -p .github
          echo "Last keep-alive run: $(date -u +"%Y-%m-%d %H:%M:%S UTC")" > .github/keep-alive.txt
          cat .github/keep-alive.txt
      
      - name: Commit and push if changes exist
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add .github/keep-alive.txt
          
          # Only commit if there are changes
          if git diff --staged --quiet; then
            echo "No changes to commit"
          else
            git commit -m "chore: update keep-alive timestamp [skip ci]"
            git push
          fi

